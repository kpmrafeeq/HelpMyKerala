@model RescueHandymans.Data.HandyMan

@{
    ViewBag.Title = "Details";
}

<div class="card mb-3 details">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Deltails
    </div>
    <div class="card-body">
        <div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-paging="false" data-searching="false">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedOn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HandyMansService.Description)
                            </th>


                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.FirstName
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => modelItem.ModifiedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.District.Name) ,  @Html.DisplayFor(modelItem => modelItem.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.HandyMansService.Description)
                            </td>


                        </tr>

                    </tbody>
                </table>



            </div>
            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>

@model RescueHandymans.Data.HandyMansRequest

@{
    ViewBag.Title = "Details";
}

<div class="card mb-3 details">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Datails
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-paging="false" data-searching="false">
                <thead>
                    <tr>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.RequesterName)
                        </th>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th  data-orderable="false">
                            District
                        </th>
                        <th  data-orderable="false">
                            @Html.DisplayNameFor(model => model.HandyMansService.Description)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.RequesterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => modelItem.ModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.District.Name), @Html.DisplayFor(modelItem => modelItem.Place.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.HandyMansService.Description)
                        </td>

                    </tr>
                </tbody>
            </table>

        </div>
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
   
</div>
